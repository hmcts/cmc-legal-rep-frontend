{
  "name": "cmc-legal-rep-frontend",
  "version": "1.1.1",
  "description": "Front end for legal representation journey within CMC",
  "private": true,
  "engines": {
    "node": ">=8.8.0"
  },
  "repository": "git@github.com:hmcts/cmc-legal-rep-frontend.git",
  "author": "HMCTS",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --project tsconfig.prod.json",
    "setup": "gulp sass copy-files",
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start-prod": "node -r tsconfig-paths/register src/main/server.js",
    "lint": "tsc --noEmit && tslint --project tsconfig.json && sass-lint -v -q",
    "test": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=legal-rep-frontend-unit",
    "test:routes": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' -or -name '*.js' \\) -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=legal-rep-frontend-routes",
    "test:a11y": "LOG_LEVEL=OFF mocha --exit --opts mocha.opts -r tsconfig-paths/register src/test/a11y/a11y.ts --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=legal-rep-frontend-a11y",
    "test:functional": "./bin/run-functional-tests.sh",
    "test:nsp": "nsp check",
    "test:coverage": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --exit --timeout 8000 --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*')",
    "test:coverage-unit": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*')",
    "test:codacy-upload": "cat ./coverage-report/lcov.info | codacy-coverage",
    "test:codecov-upload": "codecov -f ./coverage-report/lcov.info",
    "test:smoke": "./bin/run-smoke-tests.sh",
    "sonar-scan": "sonar-scanner -Dsonar.projectKey='CMCLFE' -Dsonar.projectName='CMC :: Legal Frontend' -Dsonar.sources=src/main -Dsonar.tests=src/test -Dsonar.exclusions=src/main/public/** -Dsonar.typescript.lcov.reportPaths=coverage-report/lcov.info",

    "precommit": "yarn lint",
    "prepush": "yarn test && yarn test:routes"
  },
  "dependencies": {
    "@hmcts/cmc-common-frontend": "^1.34.0",
    "@hmcts/cmc-draft-store-middleware": "^2.0.0",
    "@hmcts/draft-store-client": "^1.2.1",
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.4.3",
    "@hmcts/nodejs-logging": "^2.2.0",
    "@types/config": "^0.0.33",
    "@types/cookies": "^0.7.1",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.0.36",
    "@types/left-pad": "^1.1.1",
    "@types/lodash": "^4.14.52",
    "@types/nock": "^9.1.0",
    "@types/node": "^9.3.0",
    "@types/nunjucks": "^3.0.0",
    "@types/request-promise-native": "^1.0.2",
    "@types/shortid": "^0.0.29",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "body-parser": "^1.17.2",
    "cfb": "^1.0.1",
    "class-transformer": "^0.1.7",
    "class-validator": "^0.8.1",
    "config": "^1.26.1",
    "continuation-local-storage": "^3.2.1",
    "cookie-encrypter": "^0.2.3",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.5",
    "csurf": "^1.9.0",
    "express": "^4.15.3",
    "file-type": "^7.4.0",
    "formidable": "^1.1.1",
    "fs": "0.0.2",
    "govuk-elements-sass": "^3.1.2",
    "govuk_template_jinja": "^0.23.0",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.1.6",
    "i18next": "^10.0.0",
    "i18next-conv": "^6.0.0",
    "i18next-express-middleware": "^1.0.5",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "jquery": "^3.2.1",
    "js-base64": "^2.3.2",
    "left-pad": "^1.1.3",
    "mime": "^2.0.3",
    "moment": "^2.18.1",
    "nock": "^9.0.13",
    "numeral": "^2.0.6",
    "nunjucks": "^3.0.1",
    "nunjucks-numeral-filter": "^0.0.2",
    "otp": "^0.1.3",
    "randomstring": "^1.1.5",
    "read-chunk": "^2.1.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.4",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.4.3",
    "to-boolean": "^1.0.0",
    "ts-node": "^4.0.1",
    "tsconfig-paths": "^3.1.1",
    "typescript": "^2.4.2",
    "url-parse": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "*",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "*",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "es6-promisify": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.1",
    "mocha": "^5.0.0",
    "mochawesome": "^3.0.0",
    "mock-require": "^3.0.0",
    "nsp": "^3.1.0",
    "nyc": "^11.2.1",
    "pa11y": "^4.11.0",
    "sass-lint": "^1.10.2",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "sinon-express-mock": "^2.0.0",
    "sonarqube-scanner": "^2.0.1",
    "supertest": "^3.0.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^7.0.0"
  },
  "nyc": {
    "include": [
      "src/main"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts",
      "src/main/views/*.njk",
      "src/main/views/include/*.njk",
      "src/main/resources",
      "src/main/modules",
      "src/main/public"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "all": true
  }
}
