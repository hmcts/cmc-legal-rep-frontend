{
  "name": "cmc-legal-rep-frontend",
  "version": "1.1.0",
  "description": "Front end for legal representation journey within CMC",
  "private": true,
  "engines": {
    "node": ">=7.8.0"
  },
  "repository": "git@github.com:hmcts/cmc-legal-rep-frontend.git",
  "author": "HMCTS",
  "license": "MIT",
  "scripts": {
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "setup": "gulp sass copy-files",
    "lint": "tslint --project tsconfig.json --type-check && sass-lint -v -q",
    "test": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=legal-rep-frontend-unit",
    "test:routes": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=legal-rep-frontend-routes",
    "test:a11y": "mocha --compilers ts:ts-node/register -r tsconfig-paths/register src/test/a11y --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=legal-rep-frontend-a11y",
    "test:nsp": "nsp check",
    "test:coverage": "cross-env NODE_PATH=. nyc istanbul cover  ./node_modules/mocha/bin/_mocha -- --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*')",
    "sonar-scanner": "cross-env NODE_PATH=. node_modules/sonar-scanner/bin/sonar-scanner"
  },
  "dependencies": {
    "@hmcts/cmc-common-frontend": "^1.4.11",
    "@hmcts/nodejs-healthcheck": "^1.4.3",
    "@hmcts/nodejs-logging": "^1.1.1",
    "@types/config": "^0.0.32",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.0.36",
    "@types/left-pad": "^1.1.1",
    "@types/lodash": "^4.14.52",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.24",
    "@types/nunjucks": "^0.0.33",
    "@types/request-promise-native": "^1.0.2",
    "@types/shortid": "^0.0.29",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "body-parser": "^1.17.2",
    "class-validator": "^0.7.0",
    "config": "^1.26.1",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.5",
    "csurf": "^1.9.0",
    "express": "^4.15.3",
    "fs": "0.0.2",
    "govuk-elements-sass": "^3.1.0",
    "govuk_template_jinja": "^0.22.2",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.1.6",
    "i18next": "^9.0.0",
    "i18next-conv": "^4.0.1",
    "i18next-express-middleware": "^1.0.5",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "istanbul": "^0.4.5",
    "jquery": "^3.2.1",
    "left-pad": "^1.1.3",
    "moment": "^2.18.1",
    "nock": "^9.0.13",
    "numeral": "^2.0.6",
    "nunjucks": "^3.0.1",
    "nunjucks-numeral-filter": "^0.0.2",
    "randomstring": "^1.1.5",
    "request-promise-native": "^1.0.4",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.4.3",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.2.0",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "*",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "*",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^0.7.1",
    "es6-promisify": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.1",
    "mocha": "^3.5.0",
    "mochawesome": "^2.2.1",
    "mock-require": "^2.0.2",
    "nsp": "^2.6.3",
    "nyc": "^11.2.1",
    "pa11y": "^4.11.0",
    "sass-lint": "^1.10.2",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "sinon-express-mock": "^1.3.0",
    "sonar-scanner": "^3.0.3",
    "supertest": "^3.0.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1"
  },
  "nyc": {
    "include": [
      "src/main/app/**/*.ts",
      "src/main/common/**/*.ts",
      "src/main/features/**/*.ts"
    ],
    "exclude": [
      "typings",
      "typings/*.d.ts",
      "src/main/views/*.njk",
      "src/main/views/include/*.njk",
      "src/main/resources",
      "src/main/modules"
    ],
    "extension": [
      ".jsx",
      ".ts",
      ".tsx",
      ".js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "test/coverage",
    "all": true
  }
}
