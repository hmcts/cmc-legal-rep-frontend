{
  "name": "cmc-legal-rep-frontend",
  "version": "1.0.0-alpha",
  "description": "Front end for legal representation journey within CMC",
  "private": true,
  "engines": {
    "node": ">=7.8.0"
  },
  "repository": "git@github.com:hmcts/cmc-legal-rep-frontend.git",
  "author": "HMCTS",
  "license": "MIT",
  "scripts": {
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "setup": "gulp sass copy-files",
    "lint": "tslint --project tsconfig.json --type-check && sass-lint -v -q",
    "test": "mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=legal-rep-frontend-unit",
    "test:a11y": "mocha --compilers ts:ts-node/register -r tsconfig-paths/register src/test/a11y --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=legal-rep-frontend-a11y",
    "test:nsp": "nsp check",
    "precommit": "yarn lint",
    "prepush": "yarn test"
  },
  "dependencies": {
    "@hmcts/nodejs-logging": "^1.1.1",
    "@hmcts/cmc-common-frontend": "^1.0.0",
    "@types/config": "^0.0.32",
    "@types/express": "^4.0.36",
    "@types/left-pad": "^1.1.1",
    "@types/lodash": "^4.14.52",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "body-parser": "^1.17.2",
    "config": "^1.26.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "govuk-elements-sass": "^3.1.0",
    "govuk_template_jinja": "^0.22.2",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.1.6",
    "i18next": "^8.4.2",
    "i18next-conv": "^4.0.1",
    "i18next-express-middleware": "^1.0.5",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "numeral": "^2.0.6",
    "nunjucks": "^3.0.1",
    "nunjucks-date-filter": "^0.1.1",
    "nunjucks-numeral-filter": "^0.0.2",
    "otp": "^0.1.3",
    "request-promise-native": "^1.0.4",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.4.3",
    "ts-node": "^3.1.0",
    "tsconfig-paths": "^2.2.0",
    "typescript": "^2.3.4",
    "left-pad": "^1.1.3",
    "class-validator": "^0.7.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "^0.0.30",
    "@types/chai-spies": "^0.0.0",
    "@types/mocha": "*",
    "@types/supertest": "*",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-spies": "^0.7.1",
    "es6-promisify": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.1",
    "mocha": "^3.4.2",
    "mochawesome": "^2.2.1",
    "mock-require": "^2.0.2",
    "nsp": "^2.6.3",
    "nyc": "^11.0.2",
    "pa11y": "^4.11.0",
    "sass-lint": "^1.10.2",
    "supertest": "^3.0.0",
    "tslint": "^5.4.3",
    "tslint-config-standard": "^6.0.1"
  }
}
