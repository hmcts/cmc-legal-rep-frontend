{% extends "layout.njk" %}
{% from "form.njk" import linkButton, csrfProtection, errorSummary %}

{% set title = t('Money claim') %}
{% set heading = t('Civil Money Claims') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{ linkButton('Issue a new claim', 'start', 'button button-start') }}

        <h2 class="heading-medium" style="margin-bottom: 0">Confirm service</h2>
        <p class="form-hint" style="margin-top: 0; margin-bottom: 10px;">
          {{ t('Enter your reference or claim number to find a claim') }}
        </p>

        <div class="form-group">
          {% if error %}
            <span class="error-message">{{ t(error) }}</span>
          {% endif %}
          <input type="search" name="reference" id="reference" class="search-input" aria-label="{{ t('Search for a claim') }}">
          <button type="submit" class="search-submit icon icon-search" id="button" title="search"></button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
