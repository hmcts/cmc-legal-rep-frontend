{% extends "layout.njk" %}

{% set title = t('Money claim') %}
{% set heading = t('Choose a county court') %}

{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textInput %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <p>{{ t('This should be your preferred court for a hearing.') }}</p>
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{ textInput('', 'name', form, t('Optional')) }}
        <p><a class="form-group" target="_blank"
           href="https://courttribunalfinder.service.gov.uk/search/postcode?aol=Money+claims&spoe=nearest">
          {{ t('Find a county court') }}
        </a></p>
        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
