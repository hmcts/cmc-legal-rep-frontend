{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton %}

{% set title = t('Money claim') %}
{% set heading = t('Your issue fee') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post" class="form-group">
        {{ csrfProtection(csrf) }}

        <div class="form-group">
          <div class="task">
            <div>{{ t('Amount claimed') }}</div>
            <div class="text-align-right"> {{ t('To be assessed') }}</div>
          </div>
          <div class="task">
            <div>{{ t('Legal representativeâ€™s costs') }}</div>
            <div class="text-align-right"> {{ t('To be assessed') }}</div>
          </div>
          <div class="task">
            <div><span class="bold-small">{{ t('Issue fee') }}</span>
              {% if (claimAmount.canNotState()) %}
                {{ t('(no higher value given)') }}
              {% else %}
                {{ t('(based on higher value of %s )', { postProcess: 'sprintf', sprintf: [claimAmount.higherValue | numeral ]}) }}
              {% endif %}
            </div>
            <div class="bold-small text-align-right">{{ feeAmount | numeral }}</div>
          </div>
        </div>

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>

      </form>
    </div>
  </div>
{% endblock %}
