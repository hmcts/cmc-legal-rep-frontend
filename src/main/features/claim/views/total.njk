{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton %}

{% set title = t('Money claim') %}
{% set heading = t('Your issue fee') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post" class="form-group">
        {{ csrfProtection(csrf) }}

        <table class="table-form form-group">
          <thead>
          <tr>
            <th scope="row"/>
            <th scope="row"/>
          </tr>
          </thead>
          <tbody>
          <tr>
            <th class="font-small" scope="row">{{ t('Amount claimed') }}</th>
            <td>
              {{ t('To be assessed') }}
            </td>
          </tr>
          <tr>
            <th class="font-small" scope="row">{{ t('Legal representativeâ€™s costs') }}</th>
            <td>
              {{ t('To be assessed') }}
            </td>
          </tr>
          <tr>
            <th scope="row"><span class="bold-small">{{ t('Issue fee') }} </span>
              {% if (claimAmount.canNotState()) %}
                {{ t('(no higher value given)') }}
              {% else %}
                {{ t('(based on higher value of %s )', { postProcess: 'sprintf', sprintf: [claimAmount.higherValue | numeral ]}) }}
              {% endif %}
            </th>
            <td>
              <span class="bold-small">{{ feeAmount | numeral }}</span>
            </td>
          </tr>
          </tbody>
        </table>

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>

      </form>
    </div>
  </div>
{% endblock %}
