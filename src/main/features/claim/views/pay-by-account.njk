{% extends "layout.njk" %}

{% set title = t('Money claim') %}
{% set heading = t('Pay by Fee Account') %}

{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textInput %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="task form-group">
        <div class="column-half bold">{{ t('Total cost') }}</div>
        <div class="column-half bold">{{ feeAmount | numeral }}</div>
      </div>

      <div class="form-group">
        <form novalidate method="post">
          {{ csrfProtection(csrf) }}

          {{ textInput(t('Fee Account number'), 'reference', form) }}
          {{ saveAndContinueButton('Pay and issue') }}
        </form>
      </div>
    </div>
  </div>

{% endblock %}
