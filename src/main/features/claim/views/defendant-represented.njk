{% extends "layout.njk" %}

{% set title = t('Money claim') %}
{% set heading = t("Has the defendant got a legal representative who's instructed to accept service?") %}

{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textInput, radioGroup %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{
          radioGroup(
            label = "Has the defendant got a representative who's instructed to accept service?",
            name = "isDefendantRepresented",
            options = [
            {
              label: "Yes",
              value: "YES"
            },
            {
              label: "No",
              value: "NO"
            }
            ],
            form = form,
            isInline = true,
            legendHidden = true
          )
        }}

        <div class="form-group panel panel-border-narrow js-hidden" id="isDefendantRepresented-YES">
          {{ textInput(t('Defendant representative company name'), 'companyName', form) }}
        </div>

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
