{% extends "layout.njk" %}
{% from "form.njk" import errorSummary %}
{% from "address.njk" import addressForm %}

{% set title = t('Money claim') %}

{% block content %}
  <h1 class="heading-large">
    <span class="form-hint">
      {% if defendantNumber %} {{ defendantNumber }}
      {% else %} {{ t("Defendant's representative: ") }}
      {% endif %}
      {{ name }}
    </span>
    {{ t('Address for service') }}
  </h1>
  <div class="grid-row">
    <div class="column-two-thirds">

      {{ addressForm(form, csrf) }}

    </div>
  </div>
{% endblock %}
