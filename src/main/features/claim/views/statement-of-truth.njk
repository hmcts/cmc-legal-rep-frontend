{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textInput, textArea %}

{% set title = t('Money claim') %}
{% set heading = t('Statement of truth') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}
        <div class="form-group-compound">

          <p>{{ t("The claimant believes that the information in this claim form is true. I'm authorised by the claimant to sign this statement.") }}</p>
          {{ textArea('Name', 'signerName', form, '', 2) }}

          <div class="form-group">
            <pre>{{ t('Company ') }} </pre>
            <pre class="form-label-bold">{{ companyName }}</pre>
          </div>

          {{ textInput('Your role', 'signerRole', form) }}
        </div>

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>

    </div>
  </div>
{% endblock %}
