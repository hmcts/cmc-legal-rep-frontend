{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, radioOption, textInputInline %}

{% set title = t('Money claim') %}
{% set heading = t('Enter claim value') %}


{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-medium">{{ t('Your fee will be calculated based on the higher value.') }}</h1>
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {% set errorType = form.errorFor('cannotState') %}

        <div class="form-group">
          {% set errorLowerValue = form.errorFor('lowerValue') %}
          {% set errorUpperValue = form.errorFor('upperValue') %}
          {% if errorUpperValue or errorLowerValue %}
            <div class="column-one-half no-padding">
              <span class="error-message">{{ t(errorLowerValue) }}</span>
            </div>
            <div class="column-one-half no-padding">
              <span class="error-message">{{ t(errorUpperValue) }}</span>
            </div>
          {% endif %}
          <div class="column-one-half no-padding ">
            {{ textInputInline( 'lowerValue', form,'form-control-3-4', 'input-symbol-pound', 'Lower value (optional)', 'form-block') }}
          </div>
          <div class="column-one-half no-padding">
            {{ textInputInline( 'upperValue', form, 'form-control-3-4','input-symbol-pound', 'Upper value', 'form-block') }}
          </div>
        </div>

        <div class="form-group">
          <div class="multiple-choice {% if errorType %} form-group-error {% endif %}" data-target="max-fee">
            <input id="cannotState" type="checkbox" name="cannotState" value="cannot" {% if form.valueFor('cannotState')  == 'cannot' %} checked="checked" {% endif %}>
            <label for="cannotState">{{ t("I can't state the value of the claim") }} </label>
          </div>

          <div class="form-group panel panel-border-narrow js-hidden" id="max-fee" aria-hidden="false">
            <p>{{ t("You'll be charged the maximum fee") }}</p>
          </div>
        </div>

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
