{% extends "layout.njk" %}

{% set title = t('Money claim') %}
{% set heading = t('What documents did you serve?') %}

{% from "form.njk" import csrfProtection, checkboxGroup, saveAndContinueButton, errorSummary %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{
        checkboxGroup(
        name = 'documentTypes',
        options = [
        { label: {{ t('Particulars of claim')}, value: false },
        { label: {{ t('Response pack')}, value: false },
        { label: {{ t('Schedule of loss')}, value: false },
        { label: {{ t('Medical report(s)')}, value: false }
        ],
        isInline = false,
        form = form
        )
        }}

        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
